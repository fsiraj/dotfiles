# Styling - Editor
theme = rose-pine
font-family = JetBrainsMono Nerd Font
font-size = 10
adjust-cell-width = -10%
custom-shader = cursor-trail.glsl

# Styling - Window
title = " "
window-theme = ghostty
window-padding-x = 32
window-padding-y = 32
window-padding-balance = true
gtk-tabs-location = hidden
adw-toolbar-style = flat
gtk-titlebar-hide-when-maximized = true

# Keymap
keybind = ctrl+left_bracket=text:\x1b
keybind = alt+equal=increase_font_size:1
keybind = alt+minus=decrease_font_size:1
keybind = ctrl+equal=unbind
keybind = ctrl+minus=unbind


# Styling - Editor
theme = Rose Pine
font-family = JetBrainsMono Nerd Font
font-size = 14
adjust-cell-width = -10%
adjust-cell-height = 10%
custom-shader = cursor-trail.glsl

# Styling - Window
title = " "
window-theme = ghostty
window-padding-x = 32
window-padding-y = 32,0
window-padding-balance = true
macos-titlebar-proxy-icon = hidden
gtk-tabs-location = hidden
gtk-toolbar-style = flat
gtk-titlebar-hide-when-maximized = true

# Keymap
keybind = ctrl+left_bracket=text:\x1b
keybind = alt+equal=increase_font_size:1
keybind = alt+minus=decrease_font_size:1
# Used in neovim for splits
keybind = ctrl+equal=unbind
keybind = ctrl++=unbind
keybind = ctrl+-=unbind

